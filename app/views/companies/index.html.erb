<h1>Companies</h1>

<!-- BotÃ£o que dispara o modal -->
<button id="openModalBtn">Open Modal</button>

<!-- Estrutura do modal -->
<div id="simpleModal" class="modal">
  <div class="modal-content">
    <span id="closeModalBtn" class="closeBtn">&times;</span>
    <%= semantic_form_for @company, html: { multipart: true } do |f| %>
        <%= f.inputs do %>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :logo, as: :file %>
        <% end %>
        <%= f.actions do %>
          <%= f.action :submit, as: :button, label: "Create Company" %>
        <% end %>
      <% end %>
      
  </div>
</div>

<table border="1">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Address</th>
      <th>Logo</th>
    </tr>
  </thead>
  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.id %></td>
        <td><%= company.name %></td>
        <td><%= company.address %></td>
        <td>
          <% if company.logo.attached? %>
            <%= image_tag url_for(company.logo), alt: "#{company.name} Logo", width: 50 %>
          <% else %>
            No Logo
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @companies %>